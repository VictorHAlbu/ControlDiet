<div class="page-header">
  <%= link_to diets_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_diet_path(@diet), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show diet</h1>
</div>

<dl class="dl-horizontal">
  <dt>Start date:</dt>
  <dd><%= @diet.start_date %></dd>

  <dt>Final date:</dt>
  <dd><%= @diet.final_date %></dd>

  <dt>Weight:</dt>
  <dd><%= @diet.weight %></dd>

  <dt>Height:</dt>
  <dd><%= @diet.height %></dd>

  <dt>Ideal weight:</dt>
  <dd><%= @diet.ideal_weight %></dd>

</dl>
