    <div class="controls"> 

    <div class="form-group"> 
        <%= f.label :snack, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :snack, class: "form-control" %>
        </div>  
      </div>  
    </div>  

    <div class="form-group"> 
      <%= f.label :time, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">  
