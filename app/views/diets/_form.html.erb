<%= form_for(@diet, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @diet.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@diet.errors.count, "error") %> prohibited this diet from being saved:</h4>

      <ul>
      <% @diet.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    
      <%= f.label :start_date, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.datetime_select :start_date, class: "form-control" %>
      </div>
    
  </div>
  <div class="form-group">
    
      <%= f.label :final_date, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.datetime_select :final_date, class: "form-control" %>
      </div>
    
  </div>
  <div class="form-group">
      <%= f.label :weight, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :weight, class: "form-control" %>
      </div>
    
  </div>
  <div class="form-group">
    
      <%= f.label :height, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :height, class: "form-control" %>
      </div>
    
  </div>
  <div class="form-group">
    
      <%= f.label :ideal_weight, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :ideal_weight, class: "form-control" %>
        <dd><h3><%= @diet.classification %></h3></dd>
        <br>

        <%= link_to_add_association 'Adicionar Refeição', f, :snacks, class: "btn btn-primary",
        'data-association-insertion-node' => "#snacks ol",
        'data-association-insertion-method' => "append" %>
      <hr/>
        <br>
        <fieldset id="snacks">
          <ol>
            <%= f.fields_for :snacks do |snack| %>
              <%= render partial: "snack_fields", locals: { f: snack } %>
        <% end %>
        </ol>
        </fieldset>
      </div>
    
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
